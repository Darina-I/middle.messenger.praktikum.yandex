<div class="chat {{#if chatMessages}}chat__has-messages{{else}}chat__no-messages{{/if}}">
    {{#if chatMessages}}
        <div class="user__info">
            <div class="user__name">
               <div class="photo-circle"></div>
                <p>Вадим</p> 
            </div>
            <svg width="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
                <g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g>
                <g id="SVGRepo_iconCarrier"> 
                    <path d="M13 5C13 4.44772 12.5523 4 12 4C11.4477 4 11 4.44772 11 5C11 5.55228 11.4477 6 12 6C12.5523 6 13 5.55228 13 5Z" stroke="#1E1E1E" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path> 
                    <path d="M13 12C13 11.4477 12.5523 11 12 11C11.4477 11 11 11.4477 11 12C11 12.5523 11.4477 13 12 13C12.5523 13 13 12.5523 13 12Z" stroke="#1E1E1E" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path> 
                    <path d="M13 19C13 18.4477 12.5523 18 12 18C11.4477 18 11 18.4477 11 19C11 19.5523 11.4477 20 12 20C12.5523 20 13 19.5523 13 19Z" stroke="#1E1E1E" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path> 
                </g>
            </svg>
        </div>
        <div class="list__messages">
            {{#each chatMessages}}
                <div class="message{{#if isToUser}} message__to-user {{else}} message__from-user {{/if}}">
                    <p>{{content}}</p>
                    <p class="message__time {{#if isToUser}} time-gray{{/if}}">{{time}}</p>
                </div>
            {{/each}}
        </div>
        {{> MessageInput }}
    {{else}}
        <p>Выберите чат, чтобы отправить сообщение</p>
    {{/if}}
</div>